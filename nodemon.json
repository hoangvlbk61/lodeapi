{
  "watch": [
    "controllers",
    "middlewares",
    "models",
    "routes",
    "services",
    "utils",
    "config",
    "server.js"
  ],
  "ext": "js,json",
  "ignore": [
    "tests/**",
    "node_modules/**",
    "*.test.js",
    "*.spec.js"
  ],
  "exec": "node server.js",
  "legacyWatch": true,
  "delay": 1000,
  "verbose": true,
  "restartable": "rs",
  "env": {
    "NODE_ENV": "development"
  }
}